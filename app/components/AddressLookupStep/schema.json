{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "address-lookup",
    "oneOf": [
        {
            "type": "object",
            "properties": {
                "searchPostcode": {
                    "type": "string"
                },
                "selectAddress": {
                    "type": "string"
                },
                "postcode": {
                    "type": "string",
                    "minLength": 1
                },
                "address": {
                    "type": "array",
                    "minItems": 1
                },
                "addressType": {
                    "type": "string",
                    "enum": ["postcode"]
                },
                "selectAddressIndex": {
                    "type": "string",
                    "pattern": "^[0-9]*$"
                },
                "addressConfirmed": {
                    "type": "string",
                    "enum": ["true"]
                },
                "addressLine0": {
                    "type": "string"
                },
                "addressLine1": {
                    "type": "string"
                },
                "addressLine2": {
                    "type": "string"
                },
                "addressLine3": {
                    "type": "string"
                },
                "addressLine4": {
                    "type": "string"
                },
                "addressLine5": {
                    "type": "string"
                },
                "addressLine6": {
                    "type": "string"
                },
                "addressLine7": {
                    "type": "string"
                },
                "addressLine8": {
                    "type": "string"
                },
                "formattedAddress": {
                    "type": "object",
                    "properties": {
                        "whereabouts": {
                            "type": "array"
                        },
                        "postcode": {
                            "type": "string"
                        }
                    }
                },
                "postcodeError": {
                    "type": "string",
                    "enum": ["false"]
                }
            },
            "required": [
                "postcode",
                "address",
                "addressConfirmed",
                "addressType",
                "postcodeError"
            ]
        },
        {
            "type": "object",
            "properties": {
                "addressType": {
                    "type": "string",
                    "enum": ["manual"]
                },
                "addressConfirmed": {
                    "type": "string",
                    "enum": ["true"]
                },
                "addressManual": {
                    "type": "string"
                },
                "address": {
                    "type": "array"
                },
                "formattedAddress": {
                    "type": "object",
                    "properties": {
                        "whereabouts": {
                            "type": "array"
                        }
                    }
                }
            },
            "required": [
                "addressConfirmed",
                "addressType",
                "addressManual"
            ]
        }

    ]
}
