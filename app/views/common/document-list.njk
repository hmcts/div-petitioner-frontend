{#
  documentList
    documents     - (required) An array of documents
    content       - (required) An object of content for each document type
  renders a downloadable document link only if the d8petition exists in list
#}
{% macro documentList(documents) %}
  {%- if documents and documents.length -%}
    <nav role="navigation" aria-labelledby="subsection-title" class="document-download-list">
      <ul class="govuk-list govuk-body govuk-!-font-size-16">
        {%- for document in documents -%}
          {% if document.fileName.startsWith('d8petition') %}
            <li>
              <a class="govuk-link" href="{{ document.fileUrl }}/{{ document.fileName }}" aria-label="This link will download the file {{ document.fileName }} as PDF">
                <span class="govuk-download__icon" aria-hidden="true">
                <span class="visually-hidden">Download</span></span>Divorce application (PDF)
              </a>
            </li>
          {% endif %}
        {%- endfor -%}
      </ul>
    </nav>
  {%- endif -%}
{% endmacro %}

{% macro d8petitionDocumentInfo(documents, content) %}
 {%- for document in documents -%}
  {% if document.fileName.startsWith('d8petition') %}
    <div class="govuk-body govuk-!-margin-top-7 govuk-!-margin-bottom-7">
      <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
          <span class="govuk-warning-text__assistive">Warning</span>
          {{content.downloadWarning | safe}}
        </strong>
      </div>
    </div>
  {% endif %}
 {%- endfor -%}
{% endmacro %}
